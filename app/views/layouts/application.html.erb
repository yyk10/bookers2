<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm ">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark ">
        <div class="container">
          <a class="navbar-brand p-3" href="/">Bookers</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
            <li class="nav-item">
              <i class="fa-duotone fa-house-chimney"></i>
              <%= link_to "Home", new_user_registration_path, class: 'nav-link text-white' %>
            </li>
            <li class="nav-item">
              <i class="fa-solid fa-users"></i>
              <%= link_to 'Users', new_user_session_path, class: 'nav-link text-white' %>
            </li>
            <li class="nav-item">
              <i class="fa-solid fa-book-open"></i>
              <%= link_to 'Book', new_user_session_path, class: 'nav-link text-white' %>
            </li>
            <li class="nav-item">
              <i class="fa-solid fa-right-to-bracket"></i>
              <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: 'nav-link text-white' %>
            </li>
            <% else %>
            <li class="nav-item">
              <i class="fa-duotone fa-house-chimney"></i>
              <%= link_to "Home",'/', class: 'nav-link text-white' %>
            </li>
            <li class="nav-item">
              <i class="fa-solid fa-link"></i>
              <%= link_to "About", about_path, class: 'nav-link text-white' %>
            </li>
            <li class="nav-item">
              <i class="fa-solid fa-user-plus"></i>
              <%= link_to "Sign up", new_user_registration_path, class: 'nav-link text-white' %>
            </li>
            <li class="nav-item">
              <i class="fa-solid fa-right-to-bracket"></i>
              <%= link_to "Log in", new_user_session_path, class: 'nav-link text-white' %>
            </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main class="mb-auto">
    <%= yield %>
    </main>
    <footer class="bg text-black pt-5 pb-4">
      <div class="container">
        <div class="row no-gutters">
          <div class="col">
            <p class="text-center">CopyRight Infratop.inc</p>

          </div>
        </div>
      </div>
    </footer>
  </body>
</html>

