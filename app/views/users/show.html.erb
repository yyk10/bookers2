
<html>
<%= render 'books/list', book: @book, user: @user %>
<!--@book.user-->

<div class="col-md-8 offset-md-1">
    <h3>Books</h3>
    <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th scope="col">Title</div></th>
      <th scope="col">Opinion</div></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
       <%= image_tag book.user.get_profile_image(100,100) %>
      </td>
      <td>
      <%= link_to book_path(book.id) do %>
        <%= book.title %>
      <% end %>
      </td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>

</div>
</div>

</html>


