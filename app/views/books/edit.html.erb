
<html>
   <head>

    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body>
<div class="mx-auto" style="width: 200px;">

<h2>Editing Book</h2>
<%= form_with model: @book do |f| %>
  <label for="inputName">Title</label>
  <div><%= f.text_field :title, autofocus: true, id:"BookName", placeholder:""%>

  <div><label for="inputIntroduction">Introduction</label>
  <div><%= f.text_field :body, autofocus: true, id:"caption",placeholder:""%>
  <div><%= f.submit "Update Book",class: "btn btn-success" %></div>
<% end %>
<%= link_to "Show" , book_path(@book) %>
|
<%= link_to "Back" , books_path(@book) %>
</div>
</body>
</html